{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "target": "es2015",
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@dynamic-forms/core": [
        "libs/core/src/public_api"
      ],
      "@dynamic-forms/core/*": [
        "libs/core/src/lib/*"
      ],
      "@dynamic-forms/bootstrap": [
        "libs/bootstrap/src/public_api"
      ],
      "@dynamic-forms/bootstrap/*": [
        "libs/bootstrap/src/lib/*"
      ],
      "@dynamic-forms/material": [
        "libs/material/src/public_api"
      ],
      "@dynamic-forms/material/*": [
        "libs/material/src/lib/*"
      ]
    }
  },
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ]
}