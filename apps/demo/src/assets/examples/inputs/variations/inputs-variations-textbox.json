{
  "template": {
    "label": "Textbox variations"
  },
  "children": [
    {
      "key": "textbox",
      "type": "control",
      "template": {
        "label": "Textbox",
        "input": {
          "type": "textbox",
          "placeholder": "Enter a text"
        }
      }
    },
    {
      "key": "email",
      "type": "control",
      "template": {
        "label": "Email",
        "input": {
          "type": "textbox",
          "inputType": "email",
          "placeholder": "Enter an email"
        }
      }
    },
    {
      "key": "password",
      "type": "control",
      "template": {
        "label": "Password",
        "input": {
          "type": "textbox",
          "inputType": "password",
          "placeholder": "Enter a password"
        }
      }
    },
    {
      "key": "search",
      "type": "control",
      "template": {
        "label": "Search",
        "input": {
          "type": "textbox",
          "inputType": "search",
          "placeholder": "Enter a search text"
        }
      }
    }
  ],
  "footerActions": [ 
    {
      "id": "action-submit",
      "type": "button",
      "template": {
        "type": "submit",
        "label": "Submit"
      },
      "expressions": {
        "disabled": "data.root.status !== 'VALID'"
      }
    },
    {
      "id": "action-reset",
      "type": "button",
      "template": {
        "type": "reset",
        "label": "Reset"
      }
    }
  ]
}