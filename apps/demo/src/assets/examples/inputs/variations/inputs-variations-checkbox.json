{
  "template": {
    "label": "Checkbox variations"
  },
  "children": [
    {
      "type": "content",
      "template": {
        "content": "<h4>Default</h4>"
      }
    },
    {
      "key": "checkbox",
      "type": "control",
      "template": {
        "label": "Checkbox",
        "input": {
          "type": "checkbox"
        }
      }
    },
    {
      "type": "content",
      "template": {
        "content": "<h4>Indeterminate</h4>"
      }
    },
    {
      "key": "checkboxIndeterminate",
      "type": "control",
      "template": {
        "label": "Checkbox",
        "input": {
          "type": "checkbox",
          "indeterminate": true
        }
      }
    }
  ],
  "footerActions": [ 
    {
      "id": "action-submit",
      "type": "button",
      "template": {
        "type": "submit",
        "label": "Submit"
      },
      "expressions": {
        "disabled": "data.root.status !== 'VALID'"
      }
    },
    {
      "id": "action-reset",
      "type": "button",
      "template": {
        "type": "reset",
        "label": "Reset"
      }
    }
  ]
}