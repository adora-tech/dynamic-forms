{
  "children": [
    {
      "key": "login",
      "type": "group",
      "template": {
        "label": "Login"
      },
      "defaultValue": { 
        "email": "user01@mail.com",
        "password": null,
        "remember": true
      },
      "footerActions": [ 
        {
          "id": "action-submit",
          "type": "button",
          "template": {
            "type": "submit",
            "label": "Submit"
          },
          "expressions": {
            "disabled": "data.root.status !== 'VALID'"
          }
        },
        {
          "id": "action-validate",
          "type": "button",
          "template": {
            "type": "button",
            "label": "Validate",
            "action": "validate"
          }
        },
        {
          "id": "action-reset",
          "type": "button",
          "template": {
            "type": "reset",
            "label": "Reset"
          }
        },
        {
          "id": "action-reset-default",
          "type": "button",
          "template": {
            "type": "button",
            "label": "Reset default",
            "action": "resetDefault"
          }
        }
      ],
      "children": [
        {
          "key": "email",
          "type": "control",
          "template": {
            "label": "Email",
            "input": {
              "type": "textbox",
              "inputType": "email",
              "placeholder": "Enter your email"
            },
            "validation": {
              "required": true,
              "email": true
            }
          }
        },
        {
          "key": "password",
          "type": "control",
          "template": {
            "label": "Password",
            "input": {
              "type": "textbox",
              "inputType": "password",
              "placeholder": "Enter your password",
              "pattern": "^(?=.*\\d)(?=.*[a-zA-Z]).{6,20}$"
            },
            "validation": {
              "required": true,
              "pattern": true
            }
          }
        },
        {
          "key": "remember",
          "type": "control",
          "template": {
            "label": "Remember login",
            "input": {
              "type": "checkbox"
            }
          }
        }
      ]
    }
  ]
}