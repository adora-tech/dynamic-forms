{
  "template": {
    "className": "grid"
  },
  "children": [
    {
      "key": "items",
      "type": "dictionary",
      "template": {
        "label": "Items",
        "classNameLabel": "bold"
      },
      "defaultValue": {
        "00000000-0000-0000-0000-000000000000": {
          "id": "00000000-0000-0000-0000-000000000000",
          "name": null,
          "items": {}
        }
      },
      "headerActions": [ 
        {
          "type": "icon",
          "template": {
            "type": "button",
            "icon": "register",
            "label": "Register item",
            "action": "registerDictionaryField"
          }
        },
        {
          "type": "icon",
          "template": {
            "type": "button",
            "icon": "clear",
            "label": "Clear items",
            "action": "clearDictionaryFields"
          },
          "expressions": {
            "disabled": "!data.parent.length"
          }
        }
      ],
      "definitionTemplate": {
        "type": "group",
        "template": {
          "className": "row"
        },
        "children": [
          {
            "key": "id",
            "type": "control",
            "template": {
              "className": "col-11",
              "label": "Id",
              "input": {
                "type": "textbox"
              },
              "validation": {
                "required": true
              },
              "readonly": true
            },
            "expressions": {
              "input.defaultValue": "data.parent.key"
            }
          },
          {
            "type": "icon",
            "template": {
              "classNameWrapper": "col-1",
              "label": "Remove item",
              "icon": "remove",
              "action": "removeDictionaryField"
            }
          },
          {
            "key": "name",
            "type": "control",
            "template": {
              "className": "col-11",
              "label": "Name",
              "input": {
                "type": "textbox",
                "placeholder": "Enter a name"
              },
              "validation": {
                "required": true
              }
            }
          },
          {
            "key": "items",
            "type": "dictionary",
            "template": {
              "label": "Child Items",
              "className": "col-12",
              "classNameLabel": "bold"
            },
            "headerActions": [
              {
                "type": "icon",
                "template": {
                  "type": "button",
                  "icon": "register",
                  "label": "Register child item",
                  "action": "registerDictionaryField"
                }
              }, 
              {
                "type": "icon",
                "template": {
                  "type": "button",
                  "icon": "clear",
                  "label": "Clear child items",
                  "action": "clearDictionaryFields"
                },
                "expressions": {
                  "disabled": "!data.parent.length"
                }
              }
            ],
            "definitionTemplate": {
              "type": "group",
              "template": {
                "className": "row"
              },
              "children": [
                {
                  "key": "parentId",
                  "type": "control",
                  "template": {
                    "className": "col-11",
                    "label": "Parent Id",
                    "input": {
                      "type": "textbox"
                    },
                    "validation": {
                      "required": true
                    },
                    "readonly": true
                  },
                  "expressions": {
                    "input.defaultValue": "data.parent.parent.parent.key"
                  }
                },
                {
                  "type": "icon",
                  "template": {
                    "classNameWrapper": "col-1",
                    "label": "Remove child item",
                    "icon": "remove",
                    "action": "removeDictionaryField"
                  }
                },
                {
                  "key": "id",
                  "type": "control",
                  "template": {
                    "className": "col-11",
                    "label": "Id",
                    "input": {
                      "type": "textbox"
                    },
                    "validation": {
                      "required": true
                    },
                    "readonly": true
                  },
                  "expressions": {
                    "input.defaultValue": "data.parent.key"
                  }
                },
                {
                  "key": "name",
                  "type": "control",
                  "template": {
                    "className": "col-11",
                    "label": "Name",
                    "input": {
                      "type": "textbox",
                      "placeholder": "Enter a name"
                    },
                    "validation": {
                      "required": true
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ],
  "footerActions": [ 
    {
      "id": "action-submit",
      "type": "button",
      "template": {
        "type": "submit",
        "label": "Submit"
      },
      "expressions": {
        "disabled": "data.root.status !== 'VALID'"
      }
    },
    {
      "id": "action-validate",
      "type": "button",
      "template": {
        "type": "button",
        "label": "Validate",
        "action": "validate"
      }
    },
    {
      "id": "action-reset",
      "type": "button",
      "template": {
        "type": "reset",
        "label": "Reset"
      }
    },
    {
      "id": "action-reset-default",
      "type": "button",
      "template": {
        "type": "button",
        "label": "Reset default",
        "action": "resetDefault"
      }
    }
  ]
}