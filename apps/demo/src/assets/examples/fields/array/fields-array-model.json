{
  "template": {
    "className": "grid"
  },
  "children": [
    {
      "key": "users",
      "type": "array",
      "template": {
        "label": "Users"
      },
      "definitionTemplate": {
        "type": "group",
        "template": {
          "className": "row",
          "classNameLabel": "col-12"
        },
        "expressions": {
          "label": "(data.index + 1) + '. User'"
        },
        "children": [
          {
            "key": "id",
            "type": "control",
            "template": {
              "className": "col-2",
              "label": "Id",
              "input": {
                "type": "textbox"
              },
              "readonly": true
            }
          },
          {
            "key": "name",
            "type": "control",
            "template": {
              "className": "col-4",
              "label": "Name",
              "input": {
                "type": "textbox",
                "placeholder": "Enter name"
              },
              "validation": {
                "required": true
              }
            }
          },
          {
            "key": "email",
            "type": "control",
            "template": {
              "className": "col-6",
              "label": "Email",
              "input": {
                "type": "textbox",
                "inputType": "email",
                "placeholder": "Enter email"
              },
              "validation": {
                "required": true,
                "email": true
              }
            }
          }
        ]
      }
    }
  ],
  "footerActions": [ 
    {
      "id": "action-submit",
      "type": "button",
      "template": {
        "type": "submit",
        "label": "Submit"
      },
      "expressions": {
        "disabled": "data.root.status !== 'VALID'"
      }
    },
    {
      "id": "action-validate",
      "type": "button",
      "template": {
        "type": "button",
        "label": "Validate",
        "action": "validate"
      }
    },
    {
      "id": "action-reset",
      "type": "button",
      "template": {
        "type": "reset",
        "label": "Reset"
      }
    },
    {
      "id": "action-reset-default",
      "type": "button",
      "template": {
        "type": "button",
        "label": "Reset default",
        "action": "resetDefault"
      }
    }
  ]
}